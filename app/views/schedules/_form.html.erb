<div id="dg">
  <div class="container">
    <div class="row centered">
      <div class="row">
      <%= form_with(model: schedule, local: true) do |form| %>
        <% if schedule.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

            <ul>
            <% schedule.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="col-sm-4">
          <%= form.label :duration %>
        </div>
        <div class="col-sm-6">
          <%= form.number_field :duration, id: :schedule_duration, class: 'form-control'%>
        </div>

        <div class="col-sm-4">
          <%= form.label :start_date %>
        </div>
        <div class="col-sm-6">
          <%= form.datetime_select :start_date, id: :schedule_start_date, class: 'form-control'%>
        </div>

        <div class="col-sm-4">
          <%= form.label :course_id %>
        </div>
        <div class="col-sm-6">
          <%= form.number_field :course_id, id: :schedule_course_id, class: 'form-control'%>
        </div>

        <div class="col-sm-4">
          <%= form.label :status %>
        </div>
        <div class="col-sm-6">
          <%= form.text_field :status, id: :schedule_status, class: 'form-control'%>
        </div>

        <div class="col-sm-12">
          <%= form.submit %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
